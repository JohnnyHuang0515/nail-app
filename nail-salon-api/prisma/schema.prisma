// Nail Salon Management System - Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== Users & Authentication ====================

model User {
  id           String    @id @default(uuid())
  lineUserId   String?   @unique @map("line_user_id")
  email        String?   @unique
  passwordHash String?   @map("password_hash")
  role         UserRole
  name         String
  phone        String?
  gender       String?   // 'female', 'male', 'other'
  birthday     DateTime?
  avatarUrl    String?   @map("avatar_url")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  // Relations
  staff        Staff?
  bookings     Booking[]
  clientVisits ClientVisit[]

  @@map("users")
}

enum UserRole {
  CUSTOMER
  STAFF
  MANAGER
  ADMIN
}

// ==================== Staff/Stylists ====================

model Staff {
  id               String   @id @default(uuid())
  userId           String   @unique @map("user_id")
  displayName      String   @map("display_name")
  displayNameEn    String?  @map("display_name_en")
  title            String?
  bio              String?
  specialties      String[]
  avatarUrl        String?  @map("avatar_url")
  portfolio        String[] @default([])
  rating           Float    @default(0)
  reviewCount      Int      @default(0) @map("review_count")
  isActive         Boolean  @default(true) @map("is_active")
  workingHours     Json?    @map("working_hours")
  slotIntervalMins Int      @default(30) @map("slot_interval_mins")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  // Relations
  user     User       @relation(fields: [userId], references: [id])
  bookings Booking[]
  reviews  Review[]

  @@map("staff")
}

// ==================== Reviews ====================

model Review {
  id        String   @id @default(uuid())
  staffId   String   @map("staff_id")
  author    String
  rating    Int
  comment   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  staff Staff @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

// ==================== Services ====================

model Service {
  id              String   @id @default(uuid())
  name            String
  category        String
  description     String?
  durationMinutes Int      @map("duration_minutes")
  price           Decimal  @db.Decimal(10, 2)
  imageUrl        String?  @map("image_url")
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  bookingItems BookingItem[]

  @@map("services")
}

// ==================== Bookings ====================

model Booking {
  id                   String        @id @default(uuid())
  customerId           String        @map("customer_id")
  stylistId            String        @map("stylist_id")
  scheduledAt          DateTime      @map("scheduled_at")
  status               BookingStatus @default(PENDING)
  totalPrice           Decimal       @db.Decimal(10, 2) @map("total_price")
  totalDurationMinutes Int           @map("total_duration_minutes")
  notes                String?
  createdAt            DateTime      @default(now()) @map("created_at")
  updatedAt            DateTime      @updatedAt @map("updated_at")
  cancelledAt          DateTime?     @map("cancelled_at")

  // Relations
  customer User          @relation(fields: [customerId], references: [id])
  stylist  Staff         @relation(fields: [stylistId], references: [id])
  items    BookingItem[]

  @@unique([stylistId, scheduledAt])
  @@map("bookings")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

model BookingItem {
  id              String   @id @default(uuid())
  bookingId       String   @map("booking_id")
  serviceId       String   @map("service_id")
  price           Decimal  @db.Decimal(10, 2) // Snapshot price
  durationMinutes Int      @map("duration_minutes")
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id])

  @@map("booking_items")
}

// ==================== Coupons ====================

model Coupon {
  id                String   @id @default(uuid())
  code              String   @unique
  discountType      String   @map("discount_type") // 'percentage' or 'fixed_amount'
  discountValue     Decimal  @db.Decimal(10, 2) @map("discount_value")
  minPurchaseAmount Decimal? @db.Decimal(10, 2) @map("min_purchase_amount")
  maxDiscountAmount Decimal? @db.Decimal(10, 2) @map("max_discount_amount")
  validFrom         DateTime @map("valid_from")
  validUntil        DateTime @map("valid_until")
  usageLimit        Int?     @map("usage_limit")
  usageCount        Int      @default(0) @map("usage_count")
  isActive          Boolean  @default(true) @map("is_active")
  createdAt         DateTime @default(now()) @map("created_at")

  @@map("coupons")
}

// ==================== Inventory ====================

model InventoryItem {
  id            String                   @id @default(uuid())
  name          String
  category      String?
  sku           String?                  @unique
  quantity      Int                      @default(0)
  unit          String?
  minStockLevel Int?                     @map("min_stock_level")
  costPrice     Decimal?                 @db.Decimal(10, 2) @map("cost_price")
  supplier      String?
  notes         String?
  createdAt     DateTime                 @default(now()) @map("created_at")
  updatedAt     DateTime                 @updatedAt @map("updated_at")

  // Relations
  transactions InventoryTransaction[]

  @@map("inventory_items")
}

model InventoryTransaction {
  id              String   @id @default(uuid())
  itemId          String   @map("item_id")
  transactionType String   @map("transaction_type") // 'in', 'out', 'adjustment'
  quantity        Int
  notes           String?
  createdBy       String?  @map("created_by")
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  item InventoryItem @relation(fields: [itemId], references: [id])

  @@map("inventory_transactions")
}

// ==================== Client Visit History ====================

model ClientVisit {
  id               String   @id @default(uuid())
  customerId       String   @map("customer_id")
  bookingId        String?  @map("booking_id")
  visitDate        DateTime @map("visit_date")
  servicesProvided String[] @map("services_provided")
  totalSpent       Decimal? @db.Decimal(10, 2) @map("total_spent")
  notes            String?
  createdAt        DateTime @default(now()) @map("created_at")

  // Relations
  customer User @relation(fields: [customerId], references: [id])

  @@map("client_visits")
}
